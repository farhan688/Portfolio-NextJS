// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  techStack   String // Stored as JSON string
  imageUrl    String
  demoUrl     String?
  repoUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Experience {
  id          String   @id @default(cuid())
  role        String
  company     String
  startDate   DateTime
  endDate     DateTime?
  description String // Stored as JSON string of bullet points
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Certificate {
  id            String   @id @default(cuid())
  title         String
  organization  String
  date          DateTime
  credentialUrl String?
  imageUrl      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model About {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String
  socialLinks String // Stored as JSON string
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Resume {
  id            String    @id @default(cuid())
  personalInfo  String // Stored as JSON string
  summary       String
  education     String // Stored as JSON string
  experience    String // Stored as JSON string
  pdfFileData   String? // Base64 encoded PDF
  pdfFileName   String?
  contentType   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}
